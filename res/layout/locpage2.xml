<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/locImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/locName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/locImage"
            android:layout_alignLeft="@+id/locImage"
            android:layout_alignRight="@+id/locImage"
            android:layout_alignTop="@+id/locImage"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="Welcome to Newcomb!"
            android:textSize="25dp"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/newcomb" />

        <TextView
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  
            android:text="Newcomb is also home to student organization offices including Student Council, the Honor and Judiciary Committees, The Cavalier Daily, LGBT Resource Center, Greek Councils, and University Programs Council"
            android:textColor="#ffffff"/>

    </LinearLayout>

</LinearLayout>