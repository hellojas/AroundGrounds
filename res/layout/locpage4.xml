<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/locImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/locName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/locImage"
            android:layout_alignLeft="@+id/locImage"
            android:layout_alignRight="@+id/locImage"
            android:layout_alignTop="@+id/locImage"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="Welcome to the Chapel!"
            android:textSize="25dp"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/chapel" />

        <TextView
            android:id="@+id/view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  
            android:text="In the late 19th century, community members raised funds to establish a non-denominational church on the University Grounds. The Gothic Revival building was designed by Charles Emmet Cassell of Baltimore, the chapel's cornerstone was laid in 1885, and the chapel was dedicated in 1889. The chapel's carillon was a gift of the Seven Society. The University Chapel no longer holds regular religious services, but weddings and memorial services still take place inside."
            android:textColor="#ffffff"/>

    </LinearLayout>

</LinearLayout>